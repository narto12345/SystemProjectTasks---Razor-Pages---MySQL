@page
@model SystemProjectTasks.Pages.UserModel
@{
}

<a class="enlaces-action" asp-page="/formUser/FormUser">
    <button id="botonCrearUsuario" class="boton">Crear Usuario</button>
</a>

<div id="tabla-usuarios">
    <table class="tabla">
        <thead class="proyectos-head">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="proyectos-body centrar">
            @if (Model.Users.LongCount() != 0)
            {
                @foreach (var usuario in Model.Users)
                {
                    <tr>
                        <td>@usuario.NameU</td>
                        <td>@usuario.LastName</td>
                        <td class="acciones">
                            <a asp-route-id="@(usuario.IdUser)" asp-route-handler="EliminarUsuario">
                                <button class="boton-action" onclick="return confirm('¿Deseas borrar el proyecto?')">
                                    Eliminar
                                </button>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" style="text-align: center;">
                        No existen usuarios
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>